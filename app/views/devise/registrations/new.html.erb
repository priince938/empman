<div class="container registraion-form-container-1">
          <div class="row" >
              <div class="col-md-6" >
              
                <div class="conatiner registration-carosel-container-1" >
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
                        <ol class="carousel-indicators" >
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color: black; 
                          "></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1" style="background-color: black;  
                          "></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2" style="background-color: black;  
                          "></li>
                           <li data-target="#carouselExampleIndicators" data-slide-to="3" style="background-color: black;  
                           "></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="4" style="background-color: black;  
                            "></li>
                        </ol>
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="https://app.kredily.com/static/images/signup-slider/1.png" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="https://app.kredily.com/static/images/signup-slider/2.png" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="https://app.kredily.com/static/images/signup-slider/3.png" alt="Third slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="https://app.kredily.com/static/images/signup-slider/4.png" alt="Third slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="https://app.kredily.com/static/images/signup-slider/5.png" alt="Third slide">
                          </div>
                        </div>
                        
                      </div>
                
                </div>
                
                </div>

              
              <div class="col-md-6 form-background" >
                <div class="shadow-lg p-3 mb-5 bg-white rounded" >
                    <div class="container form-registration-container-1">
                    <div class="row row-form-registration-container-1">
                       
                    <div class="col-md-6">
                        <h5 >Create Your Company</h5>
                    </div>
                    <div class="col-md-6 ">
                        <span style="font-size: 15px;">Already have an account?</span><a href='#'>Signin</a>
                    </div>
                </div>
                </div>
                  <div class="container registration-form" >
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                      <div class="field form-group" >
                       <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" ,onkeydown:"validation()" %>
                        <span id="form-validation-text"><span>
                      </div>
                
                    <div class="field form-group">
                      <%= f.label :name %><br />
                      <%= f.text_field :name ,class:"form-control" %>
                    </div>
                    <div class="field form-group">
                      <%= f.label :dob %><br />
                      <%= f.date_field :dob ,class:"form-control" %>
                    </div>
                    <div class="field form-group">
                      <%= f.label :address %><br />
                      <%= f.text_field :address ,class:"form-control" %>
                    </div>
                    <div class="field form-group ">
                      <%= f.label :leaves %><br />
                      <%= f.number_field :leaves ,class:"form-control" %>
                    </div>
                    <div class="container" style="padding:5%;">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="field form-group ">
                            <%= f.label :company_id %><br />
                            <%= f.collection_select :company_id, Company.order(:name),:id,:name, include_blank: true ,class:"form-control" %>
                          </div>
                      </div>
                
                      <div class="col-md-4">
                        <div class="field form-group ">
                          <%= f.label :role_id %><br />
                          <%= f.collection_select :role_id, Role.order(:name),:id,:name, include_blank: true  %>
                        </div>
                      </div>
                
                      <div class="col-md-4">
                        <div class="field form-group">
                          <%= f.label :department_id %><br />
                          <%= f.collection_select :department_id, Department.order(:name),:id,:name, include_blank: true  %>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="field form-group">
                          <%= f.label :designation_id %><br />
                          <%= f.collection_select :designation_id, Department.order(:name),:id,:name, include_blank: true  %>
                        </div>
                      </div>
                     <div class="col-md-4">
                       <div class="field form-group">
                         <%= f.label :manager_id %><br />
                         <%= f.collection_select :manager_id, Employee.order(:name),:id,:name, include_blank: true  %>
                       </div>
                     </div>
                    </div>
                  </div>
                  <div class="field form-group">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control" %>
                  </div>
                
                  <div class="field form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control" ,onchange:"matchPassword()" %>
                    <span id="match-text"></span>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input " type="checkbox" id="employee_remember_me" value="option1" aria-label="..." onclick="checkbox_validation()">
                    <label class="custom-checkbox-text" for="blankCheckbox">I agree to Kredily <a href="https://kredily.com/terms-and-conditions/">terms of service</a>, <a href="https://kredily.com/privacy-policy/">privacy policy</a>, and receive communication via whatsapp, sms, phone calls and emails through third party platform</label>
                                       
                  </div>              
                
                  <div class="actions text-center">
                    <%= f.submit "Sign up" , class:"btn btn-primary registration-button" ,disabled:"disabled"  %>
                  </div>
                <% end %>
                  </div>
              
                </div>
            
            

              </div>
          </div>
      </div>
</div>
</div>